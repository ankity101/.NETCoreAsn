@using Assignment.Models;
@model List<Organisation>

<div class="container">
    <div class="row">

        <div class="col-6">
            <h2  >
                Organisation List
            </h2>
        </div>

        <div class="col-6 ">
            <a asp-controller="Organisation" asp-action="Create" class="btn btn-primary">
                 Add New Organisation
            </a>
        </div>
    </div>

    <table class="table table-bordered ">
        <thead>
            <tr>
                <th>
                    Organisation Id
                </th>
                <th>
                    Organisation Name
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var category in Model.OrderBy(u => u.OrganisationId))
            {
                <tr>
                    <td>
                        @category.OrganisationId
                    </td>
                    <td>
                        @category.OrganisationName
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Organisation" asp-action="Edit" asp-route-id="@category.OrganisationId">  Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Organisation" asp-action="Delete" asp-route-id="@category.OrganisationId">   Delete</a>
                    </td>

                </tr>

            }
        </tbody>

    </table>

</div>