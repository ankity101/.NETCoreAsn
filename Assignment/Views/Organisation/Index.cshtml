@using Assignment.Models;
@model List<Organisation>

<div class="container">
    <div class="row pt-4 pb-2">

        <div class="col-6">
            <h2 class="text-primary">
                Organisation List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Organisation" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Add New Organisation
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Organisation Id
                </th>
                <th>
                    Organisation Name
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var category in Model.OrderBy(u => u.OrganisationId))
            {
                <tr>
                    <td>
                        @category.OrganisationId
                    </td>
                    <td>
                        @category.OrganisationName
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Organisation" asp-action="Edit" asp-route-id="@category.OrganisationId"><i class="bi bi-pencil-square"></i> Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-danger" asp-controller="Organisation" asp-action="Delete" asp-route-id="@category.OrganisationId"> <i class="bi bi-trash"></i> Delete</a>
                    </td>

                </tr>

            }
        </tbody>

    </table>

</div>