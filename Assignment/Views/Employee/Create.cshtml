@using Assignment.Models;
@model Employee


<form method="post">

    <div class="border p-3 mt-4 ">
        <div class="text-primary">
            Add Employee
        </div>
        <div asp-validation-summary="All">
        </div>
        <hr />
        <div class="mb-3 row">
            <label asp-for="EmployeeId"></label>
            <input asp-for="EmployeeId" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @id = "dob" } })
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="mb-3 row">
            <label asp-for="DeptName"></label>
            @Html.DropDownListFor(model => model.DeptName, new SelectList(ViewBag.org),"Select Dept" )
        </div>

        <div class="mb-3 row">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div class="row">

            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control border"> Create </button>
            </div>

            <div class="col-6">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary form-control border"> Back To List</a>
            </div>
        </div>

    </div>

</form>

<script>
    $(function () {
        $("#dob").datepicker({
            dateFormat: "yy-mm-dd", // Define the date format
            maxDate: 0, // Restrict selection to previous dates only
            changeYear: true, // Allow year selection
            yearRange: "-100:+0" // Allow selection of years up to 100 years ago
        });
    });
</script>
