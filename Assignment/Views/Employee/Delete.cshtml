@using Assignment.Models;
@model Employee


<form method="post">

    <div class="border p-3 mt-4 ">
        <div class="text-primary">
            Delete Category
        </div>
        <div asp-validation-summary="All">
        </div>
        <hr />
        <div class="mb-3 row">
            <label asp-for="EmployeeId"></label>
            <input asp-for="EmployeeId" class="form-control disabled" />
        </div>

        <div class="mb-3 row">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control disabled" />
        </div>

        <div class="mb-3 row">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control disabled" />
        </div>

        <div class="mb-3 row">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control disabled" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control disabled" />
        </div>

        <div class="row">

            <div class="col-6">
                <button type="submit" asp-controller="Employee" asp-action="Delete" class="btn btn-primary form-control border"> Confirm Delete </button>
            </div>

            <div class="col-6">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary form-control border"> Back To List</a>
            </div>
        </div>

    </div>

</form>
 